{
  "name": "solana-flash-loan-sdk",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx example.ts",
    "api": "tsx server.ts",
    "bot": "tsx bot.ts",
    "build": "tsc",
    "dev:api": "nodemon --watch 'sdk/**/*.ts' --watch 'server.ts' --exec 'tsx' server.ts",
    "dev:bot": "nodemon --watch 'sdk/**/*.ts' --watch 'bot.ts' --exec 'tsx' bot.ts",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:bot\"",
    "start": "node dist/bot.js",
    "monitor": "ts-node src/monitorNewTokens.ts",
    "test:connection": "tsx test-connection.ts"
  },
  "keywords": [
    "solana",
    "flash-loan",
    "jupiter",
    "defi"
  ],
  "author": "",
  "license": "ISC",
  "description": "A TypeScript SDK for Solana flash loans with Jupiter DEX integration",
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@jup-ag/api": "^6.0.42",
    "@jup-ag/core": "^4.0.0-beta.21",
    "@raydium-io/raydium-sdk": "^1.3.1-beta.0",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.98.2",
    "@solendprotocol/solend-sdk": "^0.13.35",
    "@types/express": "^5.0.3",
    "axios": "^1.6.7",
    "bn.js": "^5.2.2",
    "bs58": "^6.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/node": "^20.0.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  }
}
